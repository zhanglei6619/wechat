.content {
  font-family: "Microsoft YaHei";
}

.hr {
  height: 10px;
  background-color: #f5f5f5;
}

.bg {
  width: 100%;
  height: 100px;
}

.head {
  display: flex;
  flex-direction: row;
}

.headIcon {
  margin: 10px;
}

.name {
  font-size: 15px;
  font-weight: bold;
  line-height: 100px;
}

.detail {
  font-size: 15px;
  position: absolute;
  right: 10px;
  line-height: 100px;
}

.nav {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.nav-item {
  width: 25%;
  font-size: 13px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.item {
  display: flex;
  flex-direction: row;
}

.order {
  padding-top: 10px;
  padding-left: 15px;
  padding-bottom: 10px;
  font-size: 15px;
}

.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}

.img {
  width: 100%;
}

.hide{
    display:none
}